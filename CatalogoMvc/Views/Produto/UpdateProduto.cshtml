@model CatalogoMvc.Models.ProdutoViewModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2>Atualizar Produto</h2>

<form asp-action="UpdateProduto">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome" class="col-md-2 control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="col-md-2 control-label"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preco" class="control-label"></label>
        <input asp-for="Preco" asp-format="{0:N2}" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estoque" class="col-md-2 control-label"></label>
        <input asp-for="Estoque" class="form-control" />
        <span asp-validation-for="Estoque" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId" class="col-md-2 control-label"></label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="ImagemUrl" class="col-md-2 control-label"></label>
            <input asp-for="ImagemUrl" class="form-control" />
            <span asp-validation-for="ImagemUrl" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6" style="padding-top: 10px">
            @if (string.IsNullOrEmpty(Model.ImagemUrl))
            {
                <img src="~/imagens/noImage.png" />
            }
            else
            {
                <img src="~/imagens/@Model.ImagemUrl" />
            }
        </div>
    </div>
    <div class="form-group" style="padding: 10px">
        <input type="submit" value="Salvar" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-primary">Retornar</a>
    </div>
</form>