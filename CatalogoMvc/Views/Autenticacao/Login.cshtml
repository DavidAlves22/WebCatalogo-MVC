@model CatalogoMvc.Models.Autenticacao.LoginViewModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 control-label">Usuário</label>
            <div class="col-md-6">
                <input asp-for="UserName" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label">Senha</label>
            <div class="col-md-6">
                <input asp-for="Password" class="form-control" />
            </div>
        </div>

        <div class="form-group" style="padding-top: 10px">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Logar" class="btn btn-success" />
                <a asp-action="Registrar" asp-controller="Autenticacao" class="btn btn-warning" role="button">Criar Conta</a>
            </div>
        </div>
        @if (ViewBag.Erro != null)
        {
            <div style="color: red">
                <h4>@ViewBag.Erro</h4>
            </div>
        }
    </div>
</form>